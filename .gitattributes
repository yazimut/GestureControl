.gitattributes      text eol=lf

# Editor config
.editorconfig       text eol=lf

# License
LICENSE             text eol=lf

# Visual Studio files
*.sln               text eol=crlf
*.vcxproj*          text eol=crlf

# Plain text
*.txt               text eol=lf

# Makefiles
Makefile            text eol=lf

# Windows CMD and PowerShell scripts
*.bat               text eol=crlf
